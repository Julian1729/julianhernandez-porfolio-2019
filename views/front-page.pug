extends index.pug

include inc/mixins.pug

block content
  
  //- Landing page - full height of screen on load
  section#above-the-fold
    
    .center
      
      h1 Hey there! I'm #[span Julian Hernandez.] #[br] Nice to meet you!
      a.cta.light(href="#about") Get to know me!
  
  //- Header with navigation
  section#header.no-padding
    include inc/header.pug
      
  //- About Julian
  section#about
          
    .row.to-animate
      
      .col-2.vertical
        img.profile-picture(src=template_directory_uri + '/assets/images/julianhernandez_compressed_415x450.jpg')
        +social_media_row(social_media_links)
      
      .col-2
        .about-text
          h2 Hello
          p I am a full stack web developer in Philadelphia. I work for #[a(href="http://weare.pbmarketingllc.com/" target="_blank") Premiere Brand], a full service creative studio that specializes in brand strategy and visual creation.
    
    .row
      
      .col-4.block.skills
        
        each skill in skills
          +skill(skill.name, skill.level)
  
  //- Portfolio work
  section#portfolio
    
    .row.block
      
        h2.section-heading Portfolio
    
    .row.block
              
      .portfolio-container
        
        each project in projects
          .portfolio-item(style="background: #" + project.background_color)
            a(href=project.permalink)
            if project.logo_url
              
              .logo
                img(src=project.logo_url)
            
            else 
              
              .title
                h3= project.title
              
            span.type-badge= project.environment
        
