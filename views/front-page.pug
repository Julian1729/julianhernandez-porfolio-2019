  section#footer
    
    #scroll-button
      img(src=template_directory_uri + '/assets/images/up.svg')
        
    footer
      p.copyright Copyright © 2019 Julian Hernandez. All rights reserved.
      +social_media_row(social_media_links, 'light')
      
    
    
